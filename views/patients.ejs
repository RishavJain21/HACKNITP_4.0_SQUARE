<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Patient Table</title>
    <style>
        .content {
            padding: 7rem 0;
        }

        h2 {
            font-size: 20px;
        }

        .patient {
            background-color: rgb(185, 180, 180);
        }
    </style>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid" style="width: 70%;">
                <div class="d-flex flex-grow-1">
                    <span class="w-100 d-lg-none d-block">
                        <!-- hidden spacer to center brand on mobile -->
                    </span>
                    <a class="navbar-brand d-none d-lg-inline-block" href="#"><i class="far fa-square"></i> SQUARE </a>
                    <a class="navbar-brand-two mx-auto d-lg-none d-inline-block" href="#">
                        <img src="https://via.placeholder.com/40?text=LOGO" alt="logo">
                    </a>
                    <div class="w-100 text-right">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#myNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                </div>
                <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
                    <ul class="navbar-nav ms-auto flex-nowrap">
                        <li class="nav-item">
                            <a href="../patients" id="patients" class="nav-link m-2 menu-item nav-active">PATIENTS</a>
                        </li>
                        <li class="nav-item">
                            <a href="../app_req" id="appointment request" class="nav-link m-2 menu-item">APPOINTMENT
                                REQUEST</a>
                        </li>

                        <li class="nav-item">
                            <a href="../prof_doc" id="profile" class="nav-link m-2 menu-item">PROFILE</a>
                        </li>
                        <li class="nav-item">
                            <a href="../aboutUs" id="logout" class="nav-link m-2 menu-item">LOGOUT
                                <!--<i
                                    class="fas fa-user"></i>-->
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="content">

        <div class="container">
            <h2 class="mb-5" style="text-decoration: underline; font-weight: 700; font-size:xx-large;">Patient Table
            </h2>

            <table class="table table-hover">
                <thead class="patient">
                    <tr>
                        <th scope="col">S No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Appointment Date</th>

                        <th scope="col">Upload Reports</th>
                    </tr>
                </thead>
                <tbody>
                    <tr scope="row">
                        <% for (let i=0; i<arr.length; i++){%>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <h2>
                                    <%= arr[i].name %>
                                </h2>
                            </td>
                            <td>
                                <%= arr[i].date.toDateString() %>
                            </td>

                            <td>
                                <form action="/patients" method="post" enctype="multipart/form-data">
                                    <input type="file" name="foo" >
                                    <button class="btn btn-outline-dark" type="submit" value="<%= arr[i].pat_email %>"
                                        name="patient_name">Upload</button>
                                </form>
                            </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

        </div>


    </div>

    </div>

</body>